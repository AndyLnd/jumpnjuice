{
  "name": "simple-typescript-starter",
  "private": true,
  "version": "0.0.1",
  "description": "Typescript starter project for training technoidentity courses",
  "main": "src/index.ts",
  "author": "Pervez Iqbal",
  "license": "MIT",
  "scripts": {
    "check-all": "yarn run check-types && yarn run lint && yarn run test:single && yarn start",
    "start": "webpack-dev-server",
    "check-types": "tsc --noEmit -p .",
    "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.tsx' 'src/**/*.ts'",
    "format": "prettier --write",
    "test": "jest --watch",
    "test:single": "jest"
  },
  "dependencies": {
    "immer": "^1.10.5",
    "rxjs": "^6.3.3",
    "tcomb": "^3.2.29"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "clean-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.7.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "jest": {
    "transform": {
      "\\.ts": "ts-jest"
    },
    "testRegex": "(src/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint"
    ],
    "src/**/*.{ts,tsx,js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run check-types && yarn run test:single && lint-staged"
    }
  }
}
